<h3>Modify a User</h3>

<%= form_for @user do |f| %>
  <%= @user.errors.full_messages if @user.errors.any? %>

  <p>Email: <%= f.text_field :email,class: "form-control" %></p>
  <p>Username: <%= f.text_field :username,class: "form-control" %></p>
  <p>First Name: <%= f.text_field :firstname,class: "form-control" %></p>
  <p>Last Name: <%= f.text_field :lastname,class: "form-control" %></p>
  <p>Bio: <%= f.text_field :bio,class: "form-control" %></p>
    
  <%= f.submit %>
<% end %>