<h3>Modify a User</h3>
<%= form_for @user do |f| %>
  <p>Email: <%= f.text_field :email %></p>
  <p>Username: <%= f.text_field :username %></p>
  <p>First Name: <%= f.text_field :firstname %></p>
  <p>Last Name: <%= f.text_field :lastname %></p>
  <p>Bio: <%= f.text_field :bio %></p>
  <p>Linkedin: <%= f.text_field :linkedin %></p>
  <p>Twitter: <%= f.text_field :twitter %></p>
  
  <%= f.submit %>
<% end %>